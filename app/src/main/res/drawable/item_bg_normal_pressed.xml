<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/item_bg_pressed" />
        </shape>
    </item>

    <item android:top="-2dp" android:right="-2dp" android:left="-2dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="@color/item_separator" />
        </shape>
    </item>


    <!-- to mask the bottom left bottom border -->
    <item android:top="-100dp" android:bottom="-100dp" android:right="-100dp" android:left="0dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="16dp"
                android:color="@color/item_bg_pressed" />
        </shape>
    </item>

</layer-list>